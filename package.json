{
  "name": "nxb-qdnd",
  "version": "1.0.0",
  "description": "Ứng dụng xây dựng cho Nhà xuất bản Quân Đội Nhân Dân",
  "author": "haitemobi",
  "main": "electron/main.js",
  "license": "UNLICENSED",
  "build": {
    "appId": "NXB-QDND",
    "productName": "NXB-QDND",
    "win": {
      "target": "nsis",
      "icon": "icons/logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.png"
    },
    "files": [],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "directories": {
      "output": "APP_USER",
      "buildResources": "build"
    },
    "asarUnpack": []
  },
  "dependencies": {
    "axios": "^1.13.2",
    "electron-prompt": "^1.7.0",
    "electron-updater": "^6.6.2"
  },
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  }
}
